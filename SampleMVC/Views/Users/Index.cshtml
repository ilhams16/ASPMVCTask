@model MyWebFormApp.BLL.DTOs.UserDTO

@{
	ViewBag.Title = "Profile";
}

<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card">
				<div class="card-header bg-primary text-white">
					<h5 class="mb-0">Profile</h5>
				</div>
				<div class="card-body">
					<div class="row align-items-center">
						<div class="col-md-4">
							<img src="~/pics/user.png" class="img-fluid rounded-circle" alt="Profile Picture">
						</div>
						<div class="col-md-8 justify-content-between d-block">
							<div class="d-flex justify-content-between border-bottom mt-2">
								<p>Username</p><p> @Model.Username</p>
							</div>
							<div class="d-flex justify-content-between border-bottom mt-2">
								<p>Email</p><p> @Model.Email</p>
							</div>
							<div class="d-flex justify-content-between border-bottom mt-2">
								<p>First Name</p><p> @Model.FirstName</p>
							</div>
							<div class="d-flex justify-content-between border-bottom mt-2">
								<p>Last Name</p><p> @Model.LastName</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>